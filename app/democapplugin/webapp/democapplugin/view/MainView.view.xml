<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="rits.cap.custom.plugin.democapplugin.democapplugin.controller.MainView"
    width="100%"
    height="100%">

    <Panel
        id="panelPlugin"
        width="100%"
        height="100%"
        expandable="false"
        expanded="false"
        accessibleRole="Region"
        backgroundDesign="Transparent"
        class="sapUiNoContentPadding">

        <headerToolbar>
            <Toolbar height="3rem">
                <Button
                    id="backButton"
                    visible="false"
                    text="{i18n>template.back.btn}"
                    tooltip="{i18n>template.back.tooltip}"
                    icon="sap-icon://nav-back"
                    press="onBackPress" />
                <Title id="headerTitle" text="" />
                <ToolbarSpacer />
                <Button
                    id="closeButton"
                    visible="false"
                    tooltip="{i18n>template.close.tooltip}"
                    icon="sap-icon://decline"
                    press="onClosePress" />
            </Toolbar>
        </headerToolbar>

        <content>
            <Text
                id="textPlugin"
                text="template"
                class="textFontSize"
                textAlign="Center"
                width="100%" />

            <Table
                class="sapUiSmallMargin"
                growing="true"
                growingThreshold="10"
                inset="false"
                width="auto"
                items="{
                    path: '/MaterialsReport',
                    sorter: [{
                        path: 'material',
                        descending: false
                    }],
                    parameters: {
                        $count: true,
                        $$updateGroupId: 'updateGroup1'
                    }
                }">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Materials Report" level="H2" />
                        <ToolbarSpacer />
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column width="10em">
                        <Text text="Material" />
                    </Column>
                    <Column width="8em">
                        <Text text="Version" />
                    </Column>
                    <Column width="10em">
                        <Text text="Status" />
                    </Column>
                    <Column width="15em">
                        <Text text="Description" />
                    </Column>
                    <Column width="12em">
                        <Text text="Material Type" />
                    </Column>
                    <Column width="14em">
                        <Text text="Procurement Type" />
                    </Column>
                    <Column width="8em">
                        <Text text="Lot Size" />
                    </Column>
                    <Column width="12em">
                        <Text text="Unit of Measure" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{material}" />
                            <Text text="{version}" />
                            <Text text="{status}" />
                            <Text text="{description}" />
                            <Text text="{materialType}" />
                            <Text text="{procurementType}" />
                            <Text text="{lotSize}" />
                            <Text text="{unitOfMeasure}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Panel>
</mvc:View>
